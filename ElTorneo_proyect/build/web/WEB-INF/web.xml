<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Punto de Venta Web</display-name>
    
    <!-- Configuracion de Servlets -->
    <servlet>
        <display-name>DWR Servlet</display-name>
        <servlet-name>DWRInvoker</servlet-name>
        <servlet-class>org.directwebremoting.servlet.DwrServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>logLevel</param-name>
            <param-value>FATAL</param-value>
        </init-param>
        <init-param>
            <param-name>crossDomainSessionSecurity</param-name>
            <param-value>false</param-value>
        </init-param>
        <init-param>
            <param-name>jsonpEnabled</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>classes</param-name>
            <param-value>
                co.eltorneo.mvc.fachada.FachadaSeguridad,
                co.eltorneo.mvc.fachada.FachadaElTorneo
            </param-value>
        </init-param>
    </servlet>
    
    <!-- Configuracion de Mapeo de Servlets -->
    <servlet-mapping>
        <servlet-name>DWRInvoker</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>
    
    <!-- Configuracion de Paginas de Inicio -->
    <welcome-file-list>
        <welcome-file>index_ctr.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Configuracion de tiempo de sesion -->
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
    
    <!-- Configuracion de los Resources a Base de Datos -->
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/eltorneo</res-ref-name>
        <res-type>javax.sql.ConnectionPoolDataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- Configuracion de Seguridad -->
    
    <!-- COMENTARIADO PARA QUE NO PIDA ACCESO AL DWR -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>GeneralArea</web-resource-name>
            <url-pattern>/dwr/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected_Admin_Area</web-resource-name>
            <url-pattern>/inicio.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>USER_WEB</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <!-- Configuracion de Login -->
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>JDBCRealmElTorneo</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login.jsp?error=Credenciales Incorrectas</form-error-page>
        </form-login-config>
    </login-config>
    
    <!-- Configuracion de Roles de Seguridad -->
    <security-role>
        <description>Usuarios validos</description>
        <role-name>USER_WEB</role-name>
    </security-role>
    
    <!-- Configuracion de variables de contexto -->
    <env-entry>
        <description>Ruta donde quedan guardados los logos de las empresas (S.O. Windows)</description>
        <env-entry-name>ruta_imagen_perfil_windows</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>C:\unicloud\logoempresa\</env-entry-value>
    </env-entry>
    <env-entry>
        <description>Ruta donde quedan guardados los logos de las empresas (S.O. Linux)</description>
        <env-entry-name>ruta_imagen_perfil_linux</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>/opt/unicloud/files/img/logoempresa/</env-entry-value>
    </env-entry>
    
    <env-entry>
        <description>Ruta donde quedan guardados los contratos subidos(S.O. Linux)</description>
        <env-entry-name>ruta_archivo_contrato_linux</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>/opt/unicloud/files/contratos/</env-entry-value>
    </env-entry>
    <env-entry>
        <description>Ruta donde quedan guardados los contratos subidos(S.O. Windows)</description>
        <env-entry-name>ruta_archivo_contrato_windows</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>C:\unicloud\files\contratos\</env-entry-value>
    </env-entry>

     <env-entry>
        <description>Ruta donde quedan guardados las imagenes de perfil(S.O. Linux)</description>
        <env-entry-name>ruta_archivo_imgperfil_linux</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>/opt/unicloud/files/img/perfil/</env-entry-value>
    </env-entry>
    <env-entry>
        <description>Ruta donde quedan guardados las imagenes de perfil(S.O. Windows)</description>
        <env-entry-name>ruta_archivo_imgperfil_windows</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>C:\unicloud\imgperfil\</env-entry-value>
    </env-entry>
    
     <env-entry>
        <description>Ruta donde quedan guardados temporalmente los reportes(S.O. Linux)</description>
        <env-entry-name>ruta_reporte_temporal_linux</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>/opt/unicloud/files/reportes/</env-entry-value>
    </env-entry>
    <env-entry>
        <description>Ruta donde quedan guardados temporalmente los reportes(S.O. Windows)</description>
        <env-entry-name>ruta_reporte_temporal_windows</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>C:\unicloud\reportes\</env-entry-value>
    </env-entry>
    
</web-app>